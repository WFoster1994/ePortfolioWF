@model ePortfolio.Models.Skill

@{
    ViewData["Title"] = "Edit";
}

<header class="jumbotron">
    <h2>Edit</h2>

    <h4>Skill Details @Model.SkillNo @Model.Name</h4>
</header>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <partial name="_SkillsForm.cshtml" for="@Model" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
